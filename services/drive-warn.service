[Unit]
Description=Notify mount failure

[Service]
Type=simple
ExecStart=/usr/bin/gotify push -t {{drive_check_target}} "Mount missing"
ExecStartPost=/usr/bin/curl -X POST -H "Content-Type: application/json" -d '{"jsonrpc":"2.0","method":"Application.Quit","params":[],"id":1}' http://localhost:8080/jsonrpc

[Install]
WantedBy=default.target