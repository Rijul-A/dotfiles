[Unit]
Description=Check for disk usage
OnFailure=space-warn.service

[Service]
Environment="THRESHOLD=70"
ExecStart=/usr/bin/bash \
    -c "used=$(/usr/bin/df / -h --sync --output=source,pcent \
    | /usr/bin/tail -1 \
    | /usr/bin/grep -o '[0-9]\+%' \
    | /usr/bin/sed 's/.$//'); \
    exit $(( used > $THRESHOLD ? 1 : 0))"

[Install]
WantedBy=default.target